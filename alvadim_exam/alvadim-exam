    #mkdir -p /etc/kubernetes/manifests/
cat <<EOF >/etc/kubernetes/manifests/static-web.yaml
apiVersion: v1
kind: Pod
metadata:
  name: nginx-critical
spec:
  containers:
    - name: nginx-critical
      image: nginx
      ports:
        - name: nginx-critical
          containerPort: 80
          protocol: TCP
EOF